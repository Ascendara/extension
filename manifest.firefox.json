{
    "manifest_version": 2,
    "name": "Ascendara Download Handler",
    "version": "2.5",
    "description": "Sends downloads from known (or added) providers straight to Ascendara.",
    "browser_specific_settings": {
        "gecko": {
            "id": "ascendara-download-blocker@ascendara.app",
            "strict_min_version": "58.0"
        }
    },
    "permissions": [
        "downloads",
        "storage",
        "*://*.megadb.xyz/*",
        "*://*.datanodes.to/*",
        "*://*.qiwi.gg/*",
        "*://*.buzzheavier.com/*"
    ],
    "icons": {
        "16": "icons/ascendara-16.png",
        "32": "icons/ascendara-32.png",
        "48": "icons/ascendara-48.png",
        "128": "icons/ascendara-128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/ascendara-16.png",
            "48": "icons/ascendara-48.png",
            "128": "icons/ascendara-128.png"
        }
    }
}
